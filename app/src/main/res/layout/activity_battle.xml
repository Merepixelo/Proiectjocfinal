<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/battlebackgoundscreen"
    tools:context=".activities.BattleActivity">

    <ProgressBar
        android:id="@+id/herohb"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="193dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="276dp"
        android:clickable="false"
        android:indeterminate="false"
        android:max="100"
        android:progressTint="#22E825"
        android:rotationY="-180"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/enemyview"
        android:layout_width="212dp"
        android:layout_height="266dp"
        android:layout_marginEnd="4dp"
        android:rotationY="-17"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.694"
        app:srcCompat="@drawable/enemy" />

    <ImageView
        android:id="@+id/heroview"
        android:layout_width="203dp"
        android:layout_height="277dp"
        android:rotation="0"
        android:rotationY="-21"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rylanor" />

    <ImageButton
        android:id="@+id/defendbtn"
        android:layout_width="92dp"
        android:layout_height="74dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/defendicon" />

    <ImageButton
        android:id="@+id/atackbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/attackicon" />

    <ProgressBar
        android:id="@+id/enemyhb"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="212dp"
        android:layout_height="48dp"
        android:layout_marginTop="272dp"
        android:clickable="false"
        android:indeterminate="false"
        android:max="100"
        android:progressTint="#E82222"
        android:rotationY="-180"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.989"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>